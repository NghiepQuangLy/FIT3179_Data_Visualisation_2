{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "padding": 0,
  "data": {
    "url": "https://NghiepQuangLy.github.io/FIT3179_Data_Visualisation_2/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [{
    "lookup": "properties['POSTAL']",
    "from": {
      "data": {
        "url": "https://raw.githubusercontent.com/NghiepQuangLy/FIT3179_Data_Visualisation_2/main/Threatened_species_in_each_major_group_by_country_2020_new.csv"
      },
      "key": "Postal",
      "fields": ["Country", "Normalized_Threatened_Total", "Threatened_Total", "Threatened_Mammals", "Threatened_Birds", "Threatened_Reptiles", "Threatened_Amphibians", "Threatened_Fishes", "Threatened_Plants", "Pivot Field Values", "Major Group"]
    }}],
  "hconcat": [
    {
      "title": {
        "text": "THREATENED SPECIES BY COUNTRY IN 2020",
        "font": "open sans",
        "fontSize": 17
      },
      "projection": {"type": "equalEarth"},
      "view": {"strokeWidth": 0},
      "width": 800,
      "height": 500,
      "selection": {
        "highlight": {"type": "multi", "empty": "none", "on": "mouseover"},
        "country_select": {"type": "multi", "init": [{"Country": "Australia"}], "fields": ["Country"], "resolve": "global", "empty": "none"}
      },
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Normalized_Threatened_Total",
          "type": "quantitative",
          "condition": [
            {"selection": "country_select", "value": "lightgrey"}
          ],
          "scale": {
            "type": "threshold",
            "domain": [0, 0.2, 0.4, 0.6, 0.8],
            "scheme": "reds"
          },
          "legend": {
            "title": "Normalized threatened score",
            "titleFont": "open sans",
            "labelFont": "lato"
          }
        },
        "tooltip": [
          {"field": "properties['FORMAL_EN']", "type": "nominal", "title": "Country"},
          {"field": "Threatened_Total", "type": "quantitative", "title": "Threatened species"},
          {"field": "Normalized_Threatened_Total", "type": "quantitative", "title": "Normalized threatened score"}
        ],
        "stroke": {
          "condition": [
            {"selection": "highlight", "value": "black"}
          ],
          "value": "white"
        },
        "strokeWidth": {
          "condition": [
            {"selection": "highlight", "value": 2}
          ],
          "value": 1
        }
      }
    },
    {
      "data": {
        "url": "https://NghiepQuangLy.github.io/FIT3179_Data_Visualisation_2/Threatened_species_in_each_major_group_by_country_2020_new.csv"
      },
      "height": 210,
      "width": 300,
      "title": {
        "text": "THREATENED SPECIES BY GROUP BY COUNTRY",
        "font": "open sans",
        "fontSize": 17
      },
      "transform": [
        {"filter": {"selection": "country_select"}}
      ],
      "encoding": {
        "x": {
          "field": "Pivot Field Values",
          "type": "quantitative",
          "title": "Species"
        },
        "y": {
          "field": "Major Group",
          "type": "nominal",
          "title": "Major Group"
        },
        "color": {"value":"red"},
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Normalized_Threatened_Total", "type": "quantitative", "title": "Normalized threatened score"}
        ]
      },
      "layer": [
        {
          "mark": "bar"
        },
        {
          "mark": {
            "type": "text",
            "font": "lato",
            "fontWeight": "bold",
            "align": "left",
            "baseline": "middle",
            "dx": 3
          },
          "encoding": {
            "text": {"field": "Pivot Field Values", "type": "quantitative"}
          }
        }
      ]
    }
  ]  
}
