{
  "title": {
            "text": "THREATENED SPECIES WORLDWIDE BY YEAR",
            "font": "open sans",
            "fontSize": 17,
            "color": "red"
  },
  "view": {"strokeWidth": 0},
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "data": {"url": "https://raw.githubusercontent.com/NghiepQuangLy/FIT3179_Data_Visualisation_2/main/Threatened_species_count_2006_2020.csv"},
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "year",
      "field": "year",
      "axis": {
        "format": "%Y",
        "gridDash": [10, 10],
        "domainColor": "white",
        "tickColor": "lightgray",
        "labelColor": "gray",
        "titleColor": "gray",
        "titleFontWeight": "bold",
        "titleFont": "open sans"
      },
      "title": ""
    },
    "y": {
      "aggregate": "sum",
      "field": "count",
      "title": "NUMBER OF SPECIES",
      "axis": {
        "gridDash": [10, 10],
        "domainColor": "white",
        "tickColor": "white",
        "labelColor": "gray",
        "titleColor": "gray",
        "titleFontWeight": "bold",
        "titleFont": "open sans"
      }
    },
    "color": {
      "field": "threatened_category",
      "scale": {"scheme": "reds"},
      "title": "Threatened Category",
      "sort": "descending",
      "legend": {
        "title": "Threatened Category",
        "titleFont": "open sans",
        "labelFont": "open sans",
        "titleColor": "gray",
        "labelColor": "gray",
        "orient": "bottom",
        "direction": "horizontal"
      }
    },
    "tooltip": [
      {"field": "year", "type": "temporal", "title": "Year", "format": "%Y"},
      {"field": "threatened_category", "type": "nominal", "title": "Threatened category"},
      {"field": "count", "type": "quantitative", "title": "Number of species", "format": ","}
    ]
  }
}
